# ============================================
# 数据库配置 - Database Configuration
# ============================================

# 数据库类型 (sqlite|mysql|postgres|oracle)
DB_TYPE=mysql

# SQLite 数据库文件路径
# DATABASE_PATH=./database.sqlite

# ============================================
# MySQL 配置 - MySQL Configuration
# ============================================
# 取消注释以下配置并设置 DB_TYPE=mysql
# Uncomment below and set DB_TYPE=mysql

DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=exmpale_cost

# 数据库高级配置
DB_SYNCHRONIZE=true
DB_LOGGING=true

# ============================================
# JWT 配置 - JWT Configuration
# ============================================

# Access Token (短期，用于API认证)
JWT_ACCESS_SECRET=sI-yours-bvPS-Q
JWT_ACCESS_EXPIRATION=30m

# Refresh Token (长期，用于刷新Access Token)
JWT_REFRESH_SECRET=yours
JWT_REFRESH_EXPIRATION=7d

# ============================================
# 服务器配置 - Server Configuration
# ============================================

PORT=8088

NODE_ENV=development

# ============================================
# CORS 配置 - CORS Configuration
# ============================================

# 允许的源地址，多个地址用逗号分隔，开发环境可设为 * 允许所有源
CORS_ORIGIN=*

# 是否允许携带凭证（cookies、authorization headers）
CORS_CREDENTIALS=true

# ============================================
# 开发模式配置 - Development Configuration
# ============================================

DEV_MODE=true

# 开发Token（仅开发环境使用，生产环境必须禁用）
DEV_TOKEN=dev-token-2024

# ============================================
# 邮件配置 - Mail Configuration
# ============================================

# SMTP 服务器地址
MAIL_HOST=smtp.exmail.com

# SMTP 服务器端口 (25, 465, 587)
MAIL_PORT=465

# 邮箱用户名/邮箱地址
MAIL_USER=mail@exmpale.com

# 邮箱密码或授权码
MAIL_PASSWORD=password

# 发件人信息（显示名称和邮箱地址）
MAIL_FROM="Time Sheet System" <mail@exmpale.com>

# 是否使用 SSL/TLS (true for port 465, false for port 587)
MAIL_SECURE=true
