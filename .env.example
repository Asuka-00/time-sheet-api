# ============================================
# 数据库配置 - Database Configuration
# ============================================

# 数据库类型 (sqlite|mysql|postgres|oracle)
# Database type selection
DB_TYPE=sqlite

# ============================================
# MySQL 配置 - MySQL Configuration
# ============================================
# 取消注释以下配置并设置 DB_TYPE=mysql
# Uncomment below and set DB_TYPE=mysql

# DB_HOST=localhost
# DB_PORT=3306
# DB_USERNAME=root
# DB_PASSWORD=your_password
# DB_DATABASE=timesheet

# ============================================
# PostgreSQL 配置 - PostgreSQL Configuration
# ============================================
# 取消注释以下配置并设置 DB_TYPE=postgres
# Uncomment below and set DB_TYPE=postgres

# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=your_password
# DB_DATABASE=timesheet

# ============================================
# Oracle 配置 - Oracle Configuration
# ============================================
# 取消注释以下配置并设置 DB_TYPE=oracle
# Uncomment below and set DB_TYPE=oracle

# DB_HOST=localhost
# DB_PORT=1521
# DB_USERNAME=system
# DB_PASSWORD=your_password
# DB_DATABASE=xe

# ============================================
# SQLite 配置 - SQLite Configuration
# ============================================
# SQLite 数据库文件路径
# SQLite database file path
DATABASE_PATH=./database.sqlite

# ============================================
# 数据库高级配置 - Advanced Database Settings
# ============================================

# 自动同步数据库结构 (true|false)
# ⚠️ 生产环境请设为 false，使用迁移管理数据库变更
# Auto-sync database schema (true|false)
# ⚠️ Set to false in production, use migrations instead
DB_SYNCHRONIZE=true

# 启用 SQL 日志 (true|false)
# Enable SQL logging (true|false)
DB_LOGGING=true

